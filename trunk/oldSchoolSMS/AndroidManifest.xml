<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="hu.anti.android.oldSchoolSms"
      android:versionCode="2"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7"/>
	<uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> 

    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name=".OldSchoolSMSActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SmsViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.ALTERNATIVE" />
            </intent-filter>
             <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity android:name=".SmsSendActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.ALTERNATIVE" />
            </intent-filter>
             <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="sms" />
                <data android:scheme="smsto" />
            </intent-filter>
        </activity>
<!--         <activity android:name=".NotificationActivity">
            <intent-filter>
                <action android:name="SMS_SENT"></action>
                <action android:name="SMS_DELIVERED"></action>
                <data android:mimeType="@string/smsDataType"></data>
            </intent-filter>
        </activity> -->
        <activity android:name=".SmsPreferences"></activity>

        <activity android:name="com.google.ads.AdActivity" 
              android:configChanges="keyboard|keyboardHidden|orientation"/>

        <receiver android:name=".receiver.SentStatusReceiver">
            <intent-filter>
                <action android:name="SMS_SENT"></action>
                <data android:mimeType="@string/smsDataType"></data>
            </intent-filter>
        </receiver>
        <receiver android:name="hu.anti.android.oldSchoolSms.receiver.DeliveredStatusReceiver">
            <intent-filter>
                <action android:name="SMS_DELIVERED"></action>
                <data android:mimeType="@string/smsDataType"></data>
            </intent-filter>
        </receiver>
    </application>
</manifest>